{# templates/mamo/_comparatif.html.twig #}

<div class="card mb-4">
    <div class="card-header text-center d-flex justify-content-between align-items-center cursor-pointer">
        <h4 class="mb-0">Comparatif</h4>
        <i class="bi bi-eye toggle-visibility" data-target="comparatif-content"></i>
    </div>
    <div class="card-body comparatif-content">
        <div class="mb-4">
            <div class="row g-2 align-items-end">
                <div class="col-md-5">
                    {{ form_row(form.comparatif_type, {'label': false}) }}
                </div>
                <div class="col-md-4">
                    <div class="input-group">
                        {{ form_widget(form.comparatif_date, {'attr': {'class': 'form-control flatpickr', 'id': 'comparatif_date'}}) }}
                        <span class="input-group-text cursor-pointer" id="comparatif_date_icon">
                            <i class="bi bi-calendar"></i>
                        </span>
                    </div>
                </div>
                <div class="col-md-3">
                    {{ form_row(form.comparatif_mode, {'label': false}) }}
                </div>
            </div>

            {# Bouton pour ajouter un bilan plus ancien #}
            <div class="row mt-3">
                <div class="col-md-4">
                    <button type="button" class="btn btn-outline-primary w-100" id="ajouterComparatifAncienBtn">
                        <i class="bi bi-plus-circle me-1"></i>
                        Nous disposons Ã©galement d'un bilan plus ancien datant de (MM/AAAA)
                    </button>
                </div>
            </div>

            {# Conteneur pour le bilan plus ancien #}
            <div id="comparatifAncienContainer" class="d-none mt-3">
                <div class="row">
                    <div class="col-md-4">
                        <div class="input-group">
                            {{ form_widget(form.comparatif_ancien_date, {'attr': {'class': 'form-control flatpickr', 'id': 'comparatif_ancien_date'}}) }}
                            <span class="input-group-text cursor-pointer" id="comparatif_ancien_date_icon">
                                <i class="bi bi-calendar"></i>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
