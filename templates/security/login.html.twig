{% extends 'base.html.twig' %}

{% block title %}Connexion - CR-SYMFONY{% endblock %}

{% block body %}
<div class="container">
    <div class="login-container">
        <h1 class="h3 mb-3 font-weight-normal text-center">Connexion</h1>

        <form method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            <div class="mb-3">
                <label for="inputEmail" class="form-label">Email</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
            </div>

            <div class="mb-3">
                <label for="inputPassword" class="form-label">Mot de passe</label>
                <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <div class="mb-3 form-check">
                <input type="checkbox" name="_remember_me" id="remember_me" class="form-check-input">
                <label class="form-check-label" for="remember_me">Se souvenir de moi</label>
            </div>

            <button class="btn btn-lg btn-primary w-100" type="submit">
                Se connecter
            </button>
        </form>

        <div class="mt-3 text-center">
            <a href="{{ path('app_register') }}">Pas encore inscrit ? Cr√©ez un compte</a>
        </div>
    </div>
</div>
{% endblock %} 